// Router 结构体用于接收依赖
type Router struct {
	App *fiber.App
}

func NewRouter(app *fiber.App) *Router {
	return &Router{
		App: app,
	}
}

func (r *Router) SetupRoutes() {
	r.App.Use(logger.New(logger.Config{
		DisableColors: true,
	}))

	r.App.Get("/health", func(c fiber.Ctx) error {
		return c.SendString("OK")
	})

	apiV1 := r.App.Group("/api/v1")

